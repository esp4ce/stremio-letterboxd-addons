    "@fastify/cors": "^10.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.0.0",
    "jose": "^5.0.0",
    "lru-cache": "^10.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "sharp": "^0.33.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "msw": "^2.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
